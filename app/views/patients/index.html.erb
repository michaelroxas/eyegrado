<h1>Patients</h1>

<table class="table table-striped">
	<thead>
		<th scope="col">Last Name</th>
		<th scope="col">First Name</th>
		<th scope="col">Sex</th>
		<th scope="col">Birth Date</th>
		<th scope="col">Age</th>
		<th scope="col">Actions</th>

	</thead>

	<tbody>
		<% @patients.each do |px| %>
			<tr>
				<td><%= px.last_name %> </td>
				<td><%= px.first_name %> </td>
				<td><%= px.sex %> </td>
				<td><%= px.birth_date %> </td>

				<td> <%= if Date.today.year - px.birth_date.year - 1 %> </td>
				


			</tr>
		<% end %> 
	</tbody>
</table>

</ul>